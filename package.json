{
    "name": "cloudnotes-app",
    "productName": "CloudNotes App",
    "description": "UniCA CS project for Human-Computer Interaction course.",
    "version": "1.0.0",
    "private": true,
    "author": "Davide Flore & Marco La Civita & Antonio Masala",
    "copyright": "",
    "homepage": "https://sorridi.xyz",
    "main": "app/main.js",
    "build": {
        "appId": "xyz.sorridi.cloudnotes",
        "files": [
            "app/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "directories": {
            "buildResources": "resources"
        },
        "publish": null
    },
    "scripts": {
        "drystart": "npm run build:typescript && node build/start.js",
        "start": "npm run build:css && npm run drystart",
        "build:css": "postcss src/stylesheets/tailwind.css -o src/stylesheets/tailwind-out.css",
        "build:typescript": "npx tsc -p tsconfig.json",
        "postinstall": "electron-builder install-app-deps",
        "webpack": "webpack --config=build/webpack.app.config.js",
        "release": "webpack --config=build/webpack.app.config.js --env=production && electron-builder"
    },
    "dependencies": {
        "fs-jetpack": "^5.1.0",
        "postcss-cli": "^11.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.5.5",
        "@babel/preset-env": "^7.24.5",
        "autoprefixer": "^10.4.19",
        "babel-loader": "^9.1.3",
        "css-loader": "^7.1.1",
        "electron": "^30.0.6",
        "electron-builder": "^24.13.3",
        "postcss": "^8.4.38",
        "postcss-loader": "^8.1.1",
        "source-map-support": "^0.5.21",
        "style-loader": "^4.0.0",
        "tailwindcss": "^3.4.3",
        "webpack": "^5.91.0",
        "webpack-cli": "^5.1.4",
        "webpack-merge": "^5.10.0",
        "webpack-node-externals": "^3.0.0",
        "ts-loader": "^9.5.1"
    }
}
